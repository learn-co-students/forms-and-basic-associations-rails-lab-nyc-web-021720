<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />


  <%= f.label "Artist"%>
  <%= f.text_field :artist_name%>
  <br />

  
  <%= f.label "Genre"%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>
  <br />

  
  <h4>Notes</h4>
 <%= f.fields_for :notes do |note_form| %>
  <%= note_form.label :note %>
  <%= note_form.text_area :content%>
  <br />
  <%end%>



  

  <%= f.submit %>
<% end %>


