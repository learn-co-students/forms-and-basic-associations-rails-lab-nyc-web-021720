<h1>Create a Song</h1>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
</ul>

<%= form_for @song  do |f| %>
  <%= f.label "Song title:" %>
  <%= f.text_field :title %>
  <br>
  <br>
  
  <%= f.label "Artist's name:"%>
  <%= f.text_field :artist_name%><br><br>

  <%= f.label "Select genre:"%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%><br><br>

  <h2>Notes</h2>

  <%= f.fields_for :notes do |note_form|%>
  <%= note_form.label :note %>
  <%= note_form.text_area :content%><br><br>
  <% end %>
  <%= f.submit value="Submit"%>




<% end %>



